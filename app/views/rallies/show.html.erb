<div class="container">

  <%= render "layouts/sidebar" %>

  <div class="index-container">
    <div class="rallies-index">
      <div class="rallies">
        <div class="rally_item">
          タイトル<br>
        </div>
        <div class="rally">
          <%= @rally.title %>
        </div>
        <div class="rally_item">
          要約<br>
        </div>
        <div class="rally">
          <%= @rally.abstract %>
        </div>
        <div class="rally_item">
          背景<br>
        </div>
        <div class="rally">
          <%= @rally.background %>
        </div>
        <div class="rally_item">
          アイデア<br>
        </div>
        <div class="rally">
          <%= @rally.idea %>
        </div>
        <div class="rally_item">
          手法<br>
        </div>
        <div class="rally">
          <%= @rally.method %>
        </div>
        <div class="rally_item">
          結果<br>
        </div>
        <div class="rally">
          <%= @rally.result %>
        </div>
        <div class="rally_item">
          議論<br>
        </div>
        <div class="rally">
          <%= @rally.discussion %>
        </div>
        <div class="rally_item">
          結論<br>
        </div>
        <div class="rally">
          <%= @rally.conclusion %>
        </div>
        <div class="rally_item">
          意見<br>
        </div>
        <div class="rally">
          <%= @rally.opinion %>
        </div>
        <div class="rally_item">
          URL<br>
        </div>
        <div class="rally">
          <%= @rally.url %>
        </div>
        <div class="rally_item">
          投稿者<br>
        </div>
        <div class="rally">
          <%= @rally.user.name %>
        </div>
      </div>

      <div class="comments-container">
        <div class="comments-list">コメント一覧</div>
        <% @comments.each do |comment| %>
          <div class="comment-items">
            <div class="comment-content">
              <%= comment.content %>
            </div>
            <div class="comment-user">
              <%= comment.user.name %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="comment-form">
        <%= form_with model: [@rally, @comment] do |form| %>
          <%= form.label :コメントする, class: "form-label" %><br>
          <%= form.text_field :content, class: "form" %><br>

          <%= form.submit "投稿", class: "form-submit" %>
        <% end %>
      </div>

    </div>
  </div>
</div>